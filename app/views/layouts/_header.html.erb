<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <h1>LeanCanvas</h1>
    </a>
    <div class="navigation-tools">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <% if user_signed_in? %>
          <li class="nav-link">Logged in as <strong><%= current_user.email %></strong></li>
          <li class="nav-link"><%= link_to 'Edit Profile', edit_user_registration_path %></li>
          <li class="nav-link"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="nav-link"><%= link_to "Register", new_user_registration_path, class: 'sign-up' %></li>
          <li class="nav-link"><%= link_to "Log in", new_user_session_path, class: 'sign-up' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
